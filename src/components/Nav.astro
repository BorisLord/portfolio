---
const currentPath = Astro.url.pathname;

export type link = {
  label: string;
  href: string;
};

const links: link[] = [
  { label: "Home", href: "/" },
  { label: "Projects", href: "/Projects" },
  { label: "Stack", href: "/Stack" },
  { label: "Me", href: "/Me" },
];
---

<nav aria-label="Main Navigation" class="text-white text-left -ml-2 mb-3">
  <ul class="flex gap-3">
    {
      links.map((link: link) => (
        <li>
          <a
            class={`tracking-widest px-2 ${
              currentPath === link.href
                ? "font-extrabold underline decoration-rose-700"
                : ""
            }`}
            href={link.href}
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
