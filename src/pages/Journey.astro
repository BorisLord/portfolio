---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";

const work = [
  // {
  //   title: "Freelance",
  //   date: "2024 - Now",
  //   subTitle: "FullStack Developper",
  //   description: `Working with clients to understand their needs and deliver custom digital solutions.
  //   I develop websites, automate systems, and create custom workflows that align with their specific requirements.
  //   My approach combines technical expertise with a problem-solving mindset to create efficient, and user-friendly solutions.`,
  // },
  {
    title: "Caarl",
    date: "2023 - 2024",
    link: "https://www.caarl.fr/",
    subTitle: "Apprentice FullStack Developer",
    description: `Worked under the supervision of the lead developer to implement key features,
    including dashboards, recurring appointment functionality, API log retrieval and visualization, UI mockup integration, and form workflow implementation.
    Developed SSR pages using Next.js and managed API interactions.`,
  },
];
const education = [
  {
    title: "AdaTechSchool",
    date: "2022 - 2024",
    link: "https://adatechschool.fr/",
    subTitle: "FullStack Web Development Program",
    description: `Two-year on-site web development training.
    The first year focused on project-based learning, primarily using the JavaScript ecosystem, including React, Node.js, and NoSQL databases.
    The program also focused on collaboration, teamwork, and problem-solving in a professional environment.
    The second year was spent as an apprentice, gaining real-world experience.`,
  },
  {
    title: "CS50x",
    date: "2021",
    link: "https://www.edx.org/learn/computer-science/harvard-university-cs50-s-introduction-to-computer-science",
    subTitle: "Introduction to Computer Science",
    description: `Gained foundational knowledge in computer science concepts, algorithms, and programming.
  Worked with C, Python, and SQL to solve problems related to data structures, memory management, and software engineering principles.`,
  },
  {
    title: "FreeCodeCamp",
    date: "2021",
    link: "https://www.freecodecamp.org/",
    subTitle: "Basic HTML, CSS, JavaScript",
    description: `Acquired fundamental front-end development skills, including structuring web pages with HTML, styling with CSS, and adding interactivity using JavaScript.
      Worked on hands-on projects to apply best practices in responsive design and basic DOM manipulation.`,
  },
];
---

<Layout>
  <div class="flex justify-center items-start mt-6 pb-12">
    <div class="relative w-full max-w-3xl space-y-6">
      <Card extraClass="flex flex-col items-start justify-start p-6 mb-8">
        <h1 class="font-bold text-slate-700 mb-6 ml-6">
          Professional Experience
        </h1>
        {
          work.map((item) => (
            <div class="relative flex mb-8">
              <div class="absolute left-4 top-0 h-full w-0.5 bg-red-700" />
              <div class="ml-8">
                <div class="flex">
                  <div class="flex flex-col items-start">
                    <h2 class="text-xl font-bold text-slate-700">
                      {item.title}
                    </h2>
                    <p class="text-sm text-gray-600">{item.subTitle}</p>
                  </div>
                  <div class="flex flex-col items-end ml-auto">
                    <a
                      href={item.link}
                      rel="noopener noreferrer"
                      class="text-blue-400 hover:text-red-700 hover:underline"
                    >
                      link
                    </a>
                    <p class="text-sm text-gray-600 mt-1.5">{item.date}</p>
                  </div>
                </div>
                <p class="text-gray-700 text-sm mt-2 text-justify">
                  {item.description}
                </p>
              </div>
            </div>
          ))
        }
      </Card>
      <Card extraClass="flex flex-col items-start justify-start p-6">
        <h2 class="font-bold text-slate-700 mb-6 ml-6">
          Education & Certifications
        </h2>
        {
          education.map((item) => (
            <div class="relative flex mb-8">
              <div class="absolute left-4 top-0 h-full w-0.5 bg-red-700" />
              <div class="ml-8">
                <div class="flex">
                  <div class="flex flex-col items-start">
                    <h2 class="text-xl font-bold text-slate-700">
                      {item.title}
                    </h2>
                    <p class="text-sm text-gray-600">{item.subTitle}</p>
                  </div>
                  <div class="flex flex-col items-end ml-auto">
                    <a
                      href={item.link}
                      rel="noopener noreferrer"
                      class="text-blue-400 hover:text-red-700 hover:underline"
                    >
                      link
                    </a>
                    <p class="text-sm text-gray-600 mt-1.5">{item.date}</p>
                  </div>
                </div>
                <p class="text-gray-700 text-sm mt-2 text-justify">
                  {item.description}
                </p>
              </div>
            </div>
          ))
        }
      </Card>
    </div>
  </div>
</Layout>
