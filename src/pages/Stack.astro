---
import Layout from "../layouts/Layout.astro";

const technologies = [
  { name: "Docker", icon: "🐳" },
  { name: "AdonisJS", icon: "⚡" },
  { name: "Node.js", icon: "🌿" },
  { name: "PostgreSQL", icon: "🐘" },
  { name: "Astro", icon: "🚀" },
  { name: "TailwindCSS", icon: "🎨" },
  { name: "React", icon: "⚛️" },
  { name: "TypeScript", icon: "🔷" },
  { name: "Bash", icon: "🖥️" },
  { name: "Git", icon: "🔗" },
  { name: "Rust", icon: "🦀" },
  { name: "MongoDB", icon: "🍃" },
  { name: "Next.js", icon: "➡️" },
  { name: "BabylonJS", icon: "🎮" },
  { name: "Lua", icon: "🐍" },
];
---

<Layout>
  <div class="flex justify-center items-start mt-6">
    <div class="w-full max-w-screen-md px-6">
      <h1 class="text-4xl font-extrabold text-gray-800 mb-8">
        Technologies Utilisées
      </h1>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {
          technologies.map((tech) => (
            <div class="flex flex-col items-center bg-white shadow-lg rounded-lg p-4 transition transform hover:scale-105">
              <div class="text-4xl">{tech.icon}</div>
              <p class="mt-2 text-lg font-semibold text-gray-700">
                {tech.name}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
