---
import Layout from "../../layouts/Layout.astro";

import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const projectMDX = await getCollection("projects");
  return projectMDX.map((project) => ({
    params: { title: project.data.title },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<Layout>
  <div class="flex justify-center items-start mt-6 pb">
    <div class="w-full max-w-screen-md px-6 space-y-6">
      <div
        class="w-full max-w-screen-md px-6 bg-orange-50 rounded-lg shadow-lg py-6"
      >
        <h1 class="text-3xl font-bold text-slate-700 mb-4">
          {project.data.title}
        </h1>
        <p class="text-gray-600 mb-2 font-semibold">
          {project.data.stack}
        </p>
        <p class="text-lg text-gray-700 text-justify">
          <Content />
        </p>
        {
          project.data.link ? (
            <a
              href={project.data.link}
              class="flex items-center gap-1 text-blue-500 hover:text-red-700 hover:underline mt-4 font-semibold"
              target="_blank"
              rel="noopener noreferrer"
            >
              Demo
            </a>
          ) : (
            <span class="text-gray-500 italic mt-4 block">Ø</span>
          )
        }
        {
          project.data.link ? (
            <a
              href={project.data.git}
              class="flex items-center gap-1 text-blue-500 hover:text-red-700 hover:underline mt-4 font-semibold"
              target="_blank"
              rel="noopener noreferrer"
            >
              Git
            </a>
          ) : (
            <span class="text-gray-500 italic mt-4 block">Ø</span>
          )
        }
      </div>
    </div>
  </div>
</Layout>
