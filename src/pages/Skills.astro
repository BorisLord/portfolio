---
import Layout from "../layouts/Layout.astro";
import adonisIcon from "../assets/adonis.svg";
import { Icon } from "astro-icon/components";

const core = [
  { name: "TypeScript", icon: "devicon:typescript" },
  // { name: "Adonis.JS", icon: adonisIcon.src },
  { name: "Adonis.js", icon: "" },
  { name: "Node.js", icon: "devicon:nodejs-wordmark" },
  { name: "PostgreSQL", icon: "devicon:postgresql" },
  { name: "Astro", icon: "devicon:astro" },
  { name: "React", icon: "devicon:react" },
  { name: "TailwindCSS", icon: "devicon:tailwindcss" },
];

const tool = [
  { name: "Git", icon: "devicon:git" },
  { name: "Bash", icon: "devicon:bash" },
  { name: "Docker", icon: "devicon:docker" },
  { name: "CI/CD", icon: "" },
  { name: "APIs", icon: "" },
];

const toExplore = [
  { name: "Java", icon: "devicon:java" },
  { name: "Go", icon: "devicon:go" },
  { name: "React Nativ", icon: "devicon:reactnative-wordmark" },
];

const used = [
  { name: "Rust", icon: "devicon:rust" },
  { name: "MongoDB", icon: "devicon:mongodb" },
  { name: "Redis", icon: "devicon:redis" },
];

const lib = [
  { name: "Next.js", icon: "" },
  { name: "BabylonJS", icon: "" },
  { name: "CCXT", icon: "" },
];
---

<Layout>
  <div class="flex justify-center items-start mt-6">
    <div class="w-full max-w-screen-md px-6 space-y-6">
      {
        [
          { title: "Core", data: core },
          { title: "Used", data: used },
          { title: "Explore", data: toExplore },
          { title: "Libraries", data: lib },
          { title: "Tools", data: tool },
        ].map((category) => (
            <h2 class="text-xl text-slate-700 mb-3">
              {category.title}
            </h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
              {category.data.map((tech) => (
                <div class="flex items-center justify-center bg-orange-50 shadow-lg rounded-lg p-3">
                  {tech.icon.startsWith("devicon") ? (
                    <Icon name={tech.icon} class="text-2xl mr-3" />
                  ) : (
                    <span class="text-xl font mr-3">Ã˜</span>
                  )}
                  <p class="text-gray-600">{tech.name}</p>
                </div>
              ))}
            </div>
        ))
      }
    </div>
  </div>
</Layout>
