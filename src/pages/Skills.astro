---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Card from "../components/Card.astro";

const core = [
  { name: "TypeScript", icon: "devicon:typescript" },
  { name: "NodeJS", icon: "devicon:nodejs-wordmark" },
  { name: "Deno", icon: "devicon:denojs" },
  { name: "AdonisJS", icon: "" },
  { name: "Astro", icon: "devicon:astro" },
  { name: "React", icon: "devicon:react" },
  { name: "TailwindCSS", icon: "devicon:tailwindcss" },
  { name: "PostgreSQL", icon: "devicon:postgresql" },
];

const tool = [
  { name: "VScode", icon: "devicon:vscode" },
  { name: "Git", icon: "devicon:git" },
  { name: "Bash", icon: "devicon:bash" },
  { name: "Docker", icon: "devicon:docker" },
  { name: "Cloudflare", icon: "devicon:cloudflare" },
  { name: "CI/CD", icon: "" },
  { name: "APIs", icon: "" },
];

const toExplore = [
  { name: "Java", icon: "devicon:java" },
  { name: "Solidity", icon: "devicon:solidity" },
  { name: "Go", icon: "devicon:go" },
  { name: "Mobile Dev", icon: "" },
  { name: "gRPC/tRPC", icon: "devicon:trpc" },
];

const used = [
  { name: "Rust", icon: "devicon:rust" },
  { name: "NextJS", icon: "devicon:nextjs" },
  { name: "MongoDB", icon: "devicon:mongodb" },
  { name: "Redis", icon: "devicon:redis" },
];

