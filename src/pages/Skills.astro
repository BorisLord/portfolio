---

<Layout>
  <div class="flex justify-center items-start mt-6 pb-12">
    <div class="w-full max-w-screen-md px-6 space-y-6">
      <div class="grid grid-cols-2 gap-4">
        <Card extraClass="flex items-center justify-center p-3 text-gray-600">
          <Icon name="flagpack:fr" class="mr-3" />
          French</Card
        >
        <Card extraClass="flex items-center justify-center p-3 text-gray-600">
          <Icon name="flagpack:gb-ukm" class="mr-3" />
          English C1
        </Card>
      </div>
      {
        [
          { title: "Core", data: core },
          { title: "Used", data: used },
          { title: "Tools", data: tool },
          { title: "To Be Explored", data: toExplore },
        ].map((category) => (
          <>
            <h2 class="text-xl text-slate-700 mb-3">{category.title}</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
              {category.data.map((tech) => (
                <Card extraClass="flex items-center justify-center p-3">
                  {tech.icon.startsWith("devicon") ? (
                    <Icon name={tech.icon} class="text-2xl mr-3" />
                  ) : (
                    <span class="text-xl mr-3">Ã˜</span>
                  )}
                  <p class="text-gray-600">{tech.name}</p>
                </Card>
              ))}
            </div>
          </>
        ))
      }
    </div>
  </div>
</Layout>
